# SIRHA Development Environment Variables
# Copy this file to .env and configure with your actual values

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority&appName=SIRHA
MONGODB_DATABASE=SIRHA

# JWT Security Configuration
JWT_SECRET=your-secure-jwt-secret-key-minimum-32-characters

# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@sirha.qtoisgb.mongodb.net/?retryWrites=true&w=majority&appName=SIRHA
# MONGODB_DATABASE=SIRHA

# Example for Local MongoDB:
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DATABASE=SIRHA
REDIS_PASSWORD=
REDIS_SSL=false

# JWT
JWT_SECRET=dev-secret-change-me

# Spring Boot
SPRING_PROFILES_ACTIVE=development
SERVER_PORT=8080

# Configuraci√≥n CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
