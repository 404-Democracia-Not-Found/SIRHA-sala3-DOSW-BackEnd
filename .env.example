# Variables de entorno locales para SIRHA
# Renombra este archivo a `.env` y ajusta con tus credenciales reales.

# MongoDB
MONGODB_URI=mongodb://localhost:27017/sirha
MONGODB_DATABASE=sirha

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false

# JWT
JWT_SECRET=dev-secret-change-me

# Spring Boot
SPRING_PROFILES_ACTIVE=development
SERVER_PORT=8080

# Configuraci√≥n CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
